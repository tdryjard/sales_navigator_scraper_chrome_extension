{
  "manifest_version": 3,
  "name": "Sales navigator scraper",
  "version": "0.0.1",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://espace-job-api-0d6c825d5679.herokuapp.com/*",
    "storage",
    "activeTab",
    "<all_urls>",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/*", "*://linkedin.com/*"],
      "js": [
        "scripts/background.js",
        "scripts/xhr_inject.js",
        "scrapingFeatures/resultScraper.js",
        "librairies/html2canvas.min.js",
        "librairies/purify.min.js",
        "librairies/jspdf.umd.min.js"
      ],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["xhr_inject.js", "favicon.png", "favicon.svg", "load.svg", "copy.svg", "logo.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}
